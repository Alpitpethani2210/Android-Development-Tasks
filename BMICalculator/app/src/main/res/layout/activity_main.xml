<?xml version="1.0" encoding="utf-8"?>



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:id="@+id/layout"
    android:background="@color/bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="100dp"
        android:paddingTop="5dp"
        android:background="#52E3F6"
        >

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/logo"
            android:layout_marginRight="25dp"
            android:layout_marginStart="10dp"
            android:id="@+id/logo"
            app:shapeAppearanceOverlay="@style/Base.Theme.BMICalculator"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="BMI Calculator"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:paddingStart="50dp"
            android:textColor="@color/black"
            />
    </LinearLayout>


    <ImageView
        android:id="@+id/person_image"
        android:layout_width="200dp"
        android:layout_height="220dp"
        android:src="@drawable/logo" />

    <EditText
        android:id="@+id/edt_Wt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="15"
        android:hint="Enter Your Weight(KG)"
        android:inputType="number"
        android:minHeight="48dp"
        android:paddingLeft="20dp"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/ht_feet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="15"
        android:hint="Enter Your Height`s Feet"
        android:inputType="number"
        android:minHeight="48dp"
        android:paddingLeft="20dp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/ht_inch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="15"
        android:hint="Enter Your Height`s inches"
        android:inputType="number"
        android:minHeight="48dp"
        android:paddingLeft="20dp"
        android:textColor="@color/black"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn"
        android:text="Calculate BMI"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result"
        android:id="@+id/result_text"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        />
</LinearLayout>